{
  "name": "folder-picker",
  "version": "1.0.2",
  "main": "folder-picker.js",
  "description": "A simple Electron dialog to pick folders.",
  "author": "AceBurgundy",
  "scripts": {
    "start": "electron .",
    "sample": "electron distribution/win-unpacked/folder-picker-1.0.1.exe",
    "distribution": "electron-builder"
  },
  "devDependencies": {
    "electron-builder": "^26.4.0",
    "electron": "^39.2.7"
  },
  "build": {
    "appId": "com.aceburgundy.folderpicker",
    "productName": "folder-picker-1.0.2",
    "compression": "maximum",
    "icon": "switch.ico",
    "directories": {
      "output": "distribution"
    },
    "win": {
      "target": "zip", 
      "icon": "switch.ico"
    },
    "artifactName": "folder-picker-${version}.zip"
  }
}
